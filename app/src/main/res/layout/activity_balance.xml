<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Balance">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e48300"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="17dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/refreshButton"
            android:src="@drawable/refresh"
            android:padding="16dp"
            android:clickable="true"
            android:onClick="Refresh"
            android:layout_alignBottom="@+id/title"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d9d9d9"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/relativeLayout"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/total_balance"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/loading_message"
            android:id="@+id/valueTotal"
            android:textStyle="bold"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textSize="30sp" />
    </LinearLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/balancesList"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_below="@+id/linearLayout" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:id="@+id/editBalanceBox"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BTC Balance"
            android:id="@+id/editTitle"
            android:padding="10dp"
            android:background="#e48300" />

        <com.colerobinette.cryptowatch.BalanceEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/balanceInput"
            android:layout_weight="1.06"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:layout_below="@+id/editTitle"
            android:gravity="center_vertical|right"
            android:textSize="40sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:imeOptions="actionDone"/>

    </RelativeLayout>

</RelativeLayout>
